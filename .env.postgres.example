# Application Configuration
PORT = "8080"

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
# ⚠️  DEVELOPMENT SETTINGS - DO NOT USE IN PRODUCTION
#
# SECURITY GUIDELINES FOR PRODUCTION:
# 1. POSTGRES_SSLMODE: Use "require" or "verify-full" in production
# 2. POSTGRES_PASSWORD: Store in AWS Secrets Manager, HashiCorp Vault, or similar
# 3. POSTGRES_HOST: Use VPC endpoints, not public IPs
# 4. Consider using IAM authentication instead of static credentials
# 5. Use read-only database users for applications when possible
# 6. Encrypt credentials in transit and at rest
# 7. Rotate credentials regularly (every 30-90 days)
# ============================================================================

POSTGRES_HOST = "localhost"
POSTGRES_PORT = "5432"
POSTGRES_DB = "books"
POSTGRES_USER = "postgres"
POSTGRES_PASSWORD = "postgres"
POSTGRES_SSLMODE = "disable"  # Change to "require" or "verify-full" in production

# Connection Pool Configuration (Optional - defaults: 25, 5, 5)
POSTGRES_MAX_OPEN_CONNS = 25          # Maximum number of simultaneous connections (0 = unlimited)
POSTGRES_MAX_IDLE_CONNS = 5           # Maximum number of idle connections to keep in pool
POSTGRES_CONN_MAX_LIFE_MINUTES = 5    # Maximum lifetime of a connection in minutes

